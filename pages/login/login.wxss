/* pages/login/login.wxss */
.page {
  padding: 0 60rpx;
}
.page_bd {
  width:100%;
  margin-top: 100rpx;
}
.form_login {
  width: 100%;
  display: block;
}
.form_login .user_name,.user_pwd {
  width:100%;
  height: 60rpx;
  margin: 30rpx 0;
  border-bottom: 1rpx solid #ccc;
}
.form_login input {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #999;
  padding: 0 10rpx;
}
.form_login .login_btn {
  margin-top: 140rpx;
}
.cue {
   width: 100%; 
  height: 60rpx;
  margin: 60rpx auto 0;
  line-height: 60rpx;
  text-align: center;
  opacity:0;
}
.cueHidden {
  opacity:0;
}
.cueShow {
   opacity:0; 
  animation-name: fadeIn;
  -webkit-animation-name: fadeIn;
  animation-duration: 3s;  
  -webkit-animation-duration: 3s;  
  animation-fill-mode: forwards ;
  -webkit-animation-fill-mode: forwards ;  
  /* animation-delay:1s; 
  -webkit-animation-delay:1s;  *延迟动画* */
}
@keyframes fadeIn {
    0% {
        opacity: 0
    }
    50% {
      opacity: 1
    }
    100% {
        opacity:0
    }
}
@-webkit-keyframes fadeIn {
    0% {
        opacity: 0
    }
    50% {
      opacity: 1
    }
    100% {
        opacity: 1
    }
}

.cue-text {
  border:1rpx solid #666;
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 20rpx;
}

.login_footer {
  width: 200rpx;
  height: 80rpx;
  position: fixed;
  bottom: 60rpx;
  margin: 0 auto;
  left: 0;
  right: 0;
}
.login_footer text {
  font-size: 28rpx;
  line-height: 80rpx;
  display: table;
  margin: 0 auto;
}