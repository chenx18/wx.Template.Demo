/* pages/my/my.wxss */
.page {
  background:#f5f5f5;
  box-sizing:border-box;
  height:100%;
  color:#333;
}
.my-nav {
  width: 100%;
  height: 230rpx;
  padding-top: 60rpx;
  overflow: hidden;
  background-color: #fff;
}
.nav-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto;
}
.my-name{
  margin-top: 15rpx;
  font-size: 28rpx;
  line-height: 35rpx;
  color: #333;
  text-align: center;
}
/* 关于内容 */
.my-content {
  /* width: 100%; */
  background-color: #fff;
  margin-top: 25rpx;
  padding-top:10rpx;
  box-sizing: border-box;

}
.content-item {
  width: 100%;
  font-size:30rpx;
  height: 80rpx; 
  line-height: 79rpx; 
}
.item-icon {
  display: inline-block;
  width: 15%;
  text-align: center; 
}
.item-text {
  width: 85%;
  display: inline-block;
  border-bottom: 1rpx solid #ccc;
}
.item-text .text-lt{
  padding:0 10rpx;
  color:#444;
  font-size:28rpx;
} 
.item-text .text-rt{
  font-size: 26rpx;
  padding:0 30rpx;
  color: #999;
} 

/* 授权弹窗 */
.user-show {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .5)
}
.show-box {
  width: 80%;
  background: #fff;
  border-radius: 15rpx;
  margin: 0 auto;
  box-sizing: border-box;
  position:absolute;
  top:50%;
  left:50%;
  margin-top:-25%;
  margin-left:-40%;
  overflow: hidden;
}
.box-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  line-height: 90rpx;
  border-bottom: 1rpx solid #ccc;
  text-align: center
}
.box-cont {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 20rpx;
  min-height: 100rpx;
}
.box-btn {
  width: 100%;
  line-height: 80rpx;
  border-top:1rpx solid #ccc;
  background: #fff;
  overflow: hidden;
}
.box-btn button {
  color: #1aad16;
  line-height: 84rpx;
  margin-top: -2rpx;
  
}